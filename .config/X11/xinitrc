#!/bin/sh

mpd         & # music
xcompmgr    & # transparency
xset r rate 150 75  & # speed xrate up
$XDG_CONFIG_HOME/fehbg  & # wallpaper
setxkbmap -option caps:swapescape & # swap escape and caps

#xhost si:localuser:ff  & # firefox sandbox
#xhost si:localuser:tb  & # torbrowser sandbox

# start the WM
exec dbus-launch --exit-with-session $WM
